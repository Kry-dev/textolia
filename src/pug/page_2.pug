    script.
        $(document).ready(function () {
            $("[data-toggle=popover]").each(function (i, obj) {
                $(this).popover({
                    html: true,
                    content: function () {
                        var id = $(this).attr('id')
                        return $('#popover-content-' + id).html();
                    }
                });
            });
        });

