    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    // Popper.JS
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js', integrity='sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ', crossorigin='anonymous')
    // Bootstrap JS
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js', integrity='sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js', crossorigin='anonymous')

    //script(src="assets/js/bundle.js")
    script.
        $(document).ready(function () {
            var validateStep1 = function () {
                var step1Val1 = [];
                var step1Checks2 = [];
                var step1Val1 = $('#step-1 .selectpicker').val();
                var step1Checks2 = $("#step-1-picks  input[type='checkbox']:checked");
                if(step1Val1 != 0 && step1Checks2.length > 0){
                    $('#step-1').addClass('step-complete');
                }else {
                    $('#step-1').removeClass('step-complete');
                }
            }
            var validateStep2 = function () {
                var step2Val = $("#step-2 input").val();
                if (step2Val != '') {
                    $('#step-2').addClass('step-complete');
                } else {
                    $('#step-2').removeClass('step-complete');
                }
            }
            var validateStep3 = function () {
                var step3Val1 = [];
                var step3Checks2 = [];
                var step3Val1 = $('#step-3 .selectpicker').val();
                var step3Checks2 = $("#step-3-picks  input[type='checkbox']:checked");
                if (step3Val1 != 0 && step3Checks2.length > 0) {
                    $('#step-3').addClass('step-complete');
                } else {
                    $('#step-3').removeClass('step-complete');
                }
            }
            var validateForm = $('#steps-form').on('click', function (e) {
                e.preventDefault();
                validateStep1();
                validateStep2();
                validateStep3();
            })
            $('#validate').on('submit', function () {
                validateForm();
            })

        });
